<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- define a dependency -->
	<bean id="myFortune"
		class="com.luv2code.springdemo.services.impl.HappyFortuneService">
	</bean>

	<bean id="myCoach" 
		class="com.luv2code.springdemo.coach.impl.TrackCoach">
		
		<!-- set up constructor injection -->
		<constructor-arg ref="myFortune"/>
	</bean>

	<bean id="myCricketCoach"
		class="com.luv2code.springdemo.coach.impl.CricketCoach">
		
		<!-- name must be like setter method name without a word "set" -->
		<property name="fortuneService"  ref="myFortune"/>
		<property name="team" value="MyDangerousTeam"></property>
		<property name="emailAddress" value="MyStrangeEMail@mail.com"></property>
	</bean>

</beans>
